    <property>
      <code>/*
 * Hide breadcrumbs, because there is no more variable for this
 */
.breadcrumb {
  display: none;
}

/*
 * Hide last modification info and the line after
 */
.document-header .xdocLastModification {
  display: none;
}

.document-header + hr {
  display: none;
}

/*
 * Push the footer a little bit lower because it's too high and sticks too much to the content
 */
#footerglobal {
  margin-top: 40px;
}

body {
  background-color: @xwiki-page-content-bg;
}

.main {
  div&amp; {
    box-shadow: none;
  }
}

@media (min-width: @screen-sm-min) {
  /* On sm and higher, push the content a little to the right. Does not apply to login page as it does not have xcontent*/
  #mainContentArea &gt; .xcontent {
    margin-left: 10%;
  }
  #footerglobal {
    margin-top: 100px;
  }
}

/*
 * Make colummns on the login page, for md and up, only if the loginForm-description text exists
 */
#loginForm-description {
  .make-md-column(8);
  .make-xs-column(12);
}
#loginForm-description + #loginForm {
  .make-md-column(4);
  .make-xs-column(12);
}

@media (min-width: @screen-md-min) {
  #loginForm-description + #loginForm {
    /* Try to align with the tabs on right */
    margin-top: 42px;
  }
}

#loginForm-description .tab-content {
  padding-top: 0.8em;
  padding-bottom: 0.8em;
}</code>
